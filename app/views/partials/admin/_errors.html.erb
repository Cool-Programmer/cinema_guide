<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="alert alert-danger">
          <%= pluralize(obj.errors.count, "error") %>
        occured:
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>